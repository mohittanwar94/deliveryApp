<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    app:behavior_hideable="false">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/white"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="false"
        app:contentPadding="@dimen/_5sdp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_9sdp"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:padding="@dimen/_5sdp"
                    app:srcCompat="@drawable/ic_location" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <com.ezymd.restaurantapp.delivery.customviews.SnapTextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:letterSpacing="0.01"
                        android:text=""
                        android:textColor="@color/color_b2bdd1"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="normal"
                        app:textFont="medium" />

                    <com.ezymd.restaurantapp.delivery.customviews.SnapTextView
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:enabled="false"
                        android:gravity="start|center"
                        android:paddingEnd="@dimen/_10sdp"
                        android:textColor="@color/color_667ba3"
                        android:textSize="@dimen/_13sdp"
                        app:textFont="roman" />

                </LinearLayout>

            </LinearLayout>

            <com.ezymd.restaurantapp.delivery.customviews.SnapTextView
                android:id="@+id/showDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:gravity="center_horizontal"
                android:text="@string/hide_details"
                android:textColor="@color/color_ffb912"
                android:textSize="@dimen/_13sdp"
                android:textStyle="normal"
                app:textFont="bold" />


            <com.ezymd.restaurantapp.delivery.customviews.SnapTextView
                android:id="@+id/items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:gravity="center_horizontal"
                android:text=""
                android:textColor="@color/color_667ba3"
                android:textSize="@dimen/_13sdp"
                android:textStyle="normal"
                app:textFont="roman" />


            <com.ncorti.slidetoact.SlideToActView
                android:id="@+id/accept"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_70sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:elevation="@dimen/_4sdp"
                app:animate_completion="true"
                app:animation_duration="250"
                app:area_margin="@dimen/_4sdp"
                app:border_radius="@dimen/_20sdp"
                app:bump_vibration="300"
                app:complete_icon="@drawable/ic_check"
                app:icon_margin="@dimen/_5sdp"
                app:inner_color="@color/white"
                app:outer_color="@color/color_ffb912"
                app:slider_height="@dimen/_35sdp"
                app:slider_icon="@drawable/ic_right_arrow"
                app:slider_icon_color="@color/color_002366"
                app:slider_locked="false"
                app:text="@string/slide_to_accept"
                app:text_color="@color/white"
                app:text_size="@dimen/_15sdp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>