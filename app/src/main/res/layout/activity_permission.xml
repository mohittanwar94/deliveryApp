<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/emptyView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:background="@color/white"
    android:gravity="top|center">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_50sdp"
        android:contentDescription="@string/image"
        app:srcCompat="@drawable/ic_location" />

    <com.ezymd.restaurantapp.delivery.customviews.SnapTextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:gravity="center"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="5sp"
        android:text="Ezymd Delivery collects location data to enable live tracking on google map for Live Order Tracking, without background loaction we can not track delivery guy location for order, even when the app is closed or not in use."
        android:textColor="@color/color_002366"
        android:textSize="@dimen/_15sdp"
        android:textStyle="normal"
        app:textFont="bold" />

    <com.ezymd.restaurantapp.delivery.customviews.SnapButton
        android:id="@+id/trackOrder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_below="@+id/image"
        android:layout_gravity="start"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:background="@drawable/ic_gray_btn_pressed"
        android:gravity="center"
        android:letterSpacing="0.01"
        android:paddingLeft="@dimen/_8sdp"
        android:paddingRight="@dimen/_8sdp"
        android:text="@string/allow_permission"
        android:textAllCaps="true"
        android:textColor="@color/color_002366"
        android:textSize="@dimen/_12sdp"
        app:textFont="bold" />


</RelativeLayout>


